            {% if error_width %}
            <div class="text-danger">{{ error_responsive }}</div>
            {% endif %}
            <i class="fa fa-tablet"></i> {{ entry_tablet }}
            <input type="text" name="mobile" value="{{ mobile }}" placeholder="" id="responsive-mobile" class="tt-number-field" />
