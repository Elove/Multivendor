                      <option value="1">{{ entry_sale }}</option>
                      <option value="2">{{ entry_bestseller }}</option>
                      <option value="3" selected="selected">{{ entry_mostview }}</option>
                      <option value="4">{{ entry_dealproducts }}</option>
                    {% else %}
