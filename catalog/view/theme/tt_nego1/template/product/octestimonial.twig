{{ header }}
<div class="container main">
<div class="main">
    <div id="content">
    {{ content_top }}
        <ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
			<li> <a href="{{ breadcrumb['href'] }}"> {{ breadcrumb['text'] }} </a> </li>
		{% endfor %}
  </ul>
        <div class="testimonial-product">
        <div class="title-module">
            <div class="page-title"><h1>{{ heading_title }}</h1></div>
        </div>
		{% if testimonials %}
            <div class="testimonial-container">
              		{% for testimonial in testimonials %}
				<div class="row-testimonials">
					<div class="testimonial-images col-lg-3 col-md-3 col-xs-12 colsm-12"><img src="{{ testimonial['image'] }}"></div>
					<div class="box-testimonial col-lg-9 col-md-9 col-xs-12 colsm-12">
						<div class="testimonial-std">{{ testimonial['content'] }}</div>
						<div class="testimonial-name"><h2>--{{ testimonial['customer_name'] }}--</h2></div>
					</div>
				</div>
              {% endfor %}
            </div>
            <div class="row">
                <div class="col-sm-6 text-left">{{ pagination }}</div>
                <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
           {% else %}
            <p>{{ text_empty }}</p>
            <div class="buttons">
                <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
            </div>
           {% endif %}
        </div>
    </div>
</div>
    {{ content_bottom }}
</div>
{{ footer }}